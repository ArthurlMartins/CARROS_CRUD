<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cadastro"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cadastrar Veículo"
        android:textColor="@color/cinza_mais_escuro"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="684dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/edtNome"
            style="@style/campos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_campos"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColorHint="@color/cinza_mais_escuro"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtModelo"
            style="@style/campos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_campos"
            android:ems="10"
            android:hint="Modelo"
            android:inputType="textPersonName"
            android:textColorHint="@color/cinza_mais_escuro"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtCor"
            style="@style/campos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_campos"
            android:ems="10"
            android:hint="Cor do carro"
            android:inputType="textPersonName"
            android:textColorHint="@color/cinza_mais_escuro"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtTeto"
            style="@style/campos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_campos"
            android:ems="10"
            android:hint="Cor do teto"
            android:inputType="textPersonName"
            android:textColorHint="@color/cinza_mais_escuro"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_botao"
            android:text="Adicionar Carro"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnListar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_botao"
            android:text="Carros no pátio"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/jeep_logo2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>